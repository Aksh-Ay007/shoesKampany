<script>

function validateForm() {
  const categoryNameInput = document.getElementById('categoryName');
  const categoryNameError = document.getElementById('categoryNameError');
  const descriptionInput = document.getElementById('description');
  const descriptionError = document.getElementById('descriptionError');

  categoryNameError.textContent = '';
  descriptionError.textContent = '';

  let isValid = true;

  if (categoryNameInput.value.trim() === '') {
    categoryNameError.textContent = 'Category name is required';
    isValid = false;
  } else if (!/^[A-Z]/.test(categoryNameInput.value.trim())) {
    categoryNameError.textContent = 'Category name should start with an uppercase letter';
    isValid = false;
  } else if (!/^[A-Za-z\s]+$/.test(categoryNameInput.value.trim())) {
    categoryNameError.textContent = 'Category name should only contain letters and spaces';
    isValid = false;
  } else if (/^\s|\s$/.test(categoryNameInput.value.trim())) {
    categoryNameError.textContent = 'No leading or trailing spaces allowed';
    isValid = false;
  } else if (categoryNameInput.value.trim().length > 10) {
    categoryNameError.textContent = 'Category name should not exceed ten characters';
    isValid = false;
  }

  if (descriptionInput.value.trim() === '') {
    descriptionError.textContent = 'Description is required';
    isValid = false;
  }

  return isValid;
}
</script>

