<style>
    /* Global Styles */
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    /* Container Styles */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        gap: 30px;
    }

    .wrap-num-product {
    display: flex;
    justify-content: flex-end; /* Align items to the right side */
}
    /* Cart Container Styles */
    .cart-container {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    /* Cart Table Styles */
    .cart-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
    }

    .cart-table th {
        background-color: #3f51b5;
        color: #fff;
        font-weight: 500;
        padding: 15px;
        text-align: left;
        margin-left: 50px;
    }
.table-shopping-cart .column-4 {
    width: 145px;
    text-align: center;
}
.table-shopping-cart .table_row td {
    padding-bottom: 30px;
}

.table-shopping-cart .column-3 {
    width: 400px;
    font-size: 14px;
}
    .cart-table td {
        padding: 15px;
        vertical-align: middle;
    }

    .cart-table tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    .cart-table tr:hover {
        background-color: #e0e0e0;
    }

    /* Cart Totals Container Styles */
    .cart-totals {
        width: 100%;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    /* Cart Totals Row Styles */
    .totals-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
        font-size: 1.1rem;
        padding: 10px;
        border-bottom: 1px solid #e0e0e0;
    }

    .totals-row:last-child {
        border-bottom: none;
    }

    .totals-label {
        font-weight: 500;
    }

    .totals-value {
        font-weight: 700;
    }

    .totals-discount {
        color: #4caf50;
    }

    .totals-total {
        color: #3f51b5;
        font-size: 1.4rem;
    }

    /* Checkout Button Styles */
    .checkout-btn {
        display: block;
        width: 100%;
        background-color: #3f51b5;
        color: #fff;
        text-align: center;
        text-decoration: none;
        padding: 15px;
        border-radius: 5px;
        font-weight: 500;
        transition: background-color 0.3s ease;
        margin-top: 20px;
        font-size: 1.1rem;
    }

    .checkout-btn:hover {
        background-color: #283593;
    }
    

    /* Remove Button Styles */
    .remove-btn {
        background-color: transparent;
        border: none;
        color: #e53935;
        cursor: pointer;
        transition: color 0.3s ease;
    }

    .remove-btn:hover {
        color: #c62828;
    }
