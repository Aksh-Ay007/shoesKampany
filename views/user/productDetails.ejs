	document.addEventListener('DOMContentLoaded', function () {
  const initialReviewCount = 2;
  let isExpanded = false;
  const renderedReviewIds = new Set();

  // Show edit form when edit button is clicked
  document.addEventListener('click', function (e) {
    if (e.target && e.target.classList.contains('edit-review-btn')) {
      const reviewId = e.target.dataset.reviewId;
      document.querySelector(`#review-${reviewId} .edit-review-form`).style.display = 'block';
      e.target.style.display = 'none';
    }
  });

  // Hide edit form when cancel button is clicked
  document.addEventListener('click', function (e) {
    if (e.target && e.target.classList.contains('cancel-edit')) {
      const form = e.target.closest('.edit-review-form');
      form.style.display = 'none';
      form.previousElementSibling.style.display = 'inline-block';
    }
  });

  // Form submission for editing review
  document.addEventListener('submit', function (e) {
    if (e.target && e.target.classList.contains('edit-review-form')) {
      e.preventDefault();
      const form = e.target;
      const reviewId = form.dataset.reviewId;
      const updatedRating = form.querySelector('[name="rating"]').value;
      const updatedReview = form.querySelector('[name="review"]').value;

      // Send the update request to the server
      fetch(`/reviews/${reviewId}`, {
