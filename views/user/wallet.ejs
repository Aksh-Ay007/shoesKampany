<script>
	document.addEventListener('DOMContentLoaded', () => {
	  const walletBalanceElement = document.getElementById('walletBalance');
  
	  // Function to update wallet balance
	  const updateWalletBalance = (newBalance) => {
		walletBalanceElement.textContent = newBalance.toFixed(2);
	  };
  
	  // Event delegation for cancel and return buttons
	  document.body.addEventListener('click', async (event) => {
		const target = event.target;
  
		if (target.classList.contains('cancel-order-btn')) {
		  event.preventDefault();
		  const orderId = target.dataset.orderId;
		  const reason = prompt('Reason for cancellation:', 'Changed my mind');
  
		  try {
			const response = await fetch(`/order/cancel/${orderId}?reason=${encodeURIComponent(reason)}`, { method: 'GET' });
			const data = await response.json();
  
			if (data.success) {
			  alert(`Order cancelled. Refunded: ₹${data.refundAmount.toFixed(2)}`);
			  updateWalletBalance(data.newBalance);
			  // Optionally, you can also update the order status in the UI
			} else {
			  alert(data.message);
			}
		  } catch (error) {
			console.error('Error cancelling order:', error);
			alert('Error cancelling order');
		  }
		}
  
		if (target.classList.contains('return-order-btn')) {
		  event.preventDefault();
		  const orderId = target.dataset.orderId;
  
		  try {
			const response = await fetch(`/order/return/${orderId}`, { method: 'POST' });
			const data = await response.json();
  
			if (data.success) {
			  alert(`Order returned. Refunded: ₹${data.refundAmount.toFixed(2)}`);
			  updateWalletBalance(data.newBalance);
			  // Optionally, you can also update the order status in the UI
			} else {
			  alert(data.message);
			}
		  } catch (error) {
			console.error('Error returning order:', error);
			alert('Error returning order');
		  }
		}
	  });
  
	  // Transaction History Modal
	  const historyBtn = document.getElementById('historyBtn');
	  const transactionModal = new bootstrap.Modal(document.getElementById('transactionModal'));
	  const transactionList = document.getElementById('transactionList');
  
	  historyBtn.addEventListener('click', async () => {
		try {
		  const response = await fetch('/wallet/transactions');
		  const data = await response.json();
  
		  if (data.success) {
			transactionList.innerHTML = '';
  
			data.transactions.forEach(transaction => {
			  const transactionDiv = document.createElement('div');
			  transactionDiv.className = 'border p-3 mb-3';
			  transactionDiv.innerHTML = `
				<p><strong>Date:</strong> ${new Date(transaction.timestamp).toLocaleDateString()}</p>
				<p><strong>Type:</strong> ${transaction.type}</p>
				<p><strong>Amount:</strong> ₹${transaction.amount.toFixed(2)}</p>
				<p><strong>Description:</strong> ${transaction.description || 'N/A'}</p>
			  `;
			  transactionList.appendChild(transactionDiv);
			});
  
			transactionModal.show();
		  } else {
			alert(data.message);
		  }
		} catch (error) {
		  console.error('Error fetching transactions:', error);
		  alert('Error fetching transactions');
		}
	  });
	});
  </script>
