<script>
document.addEventListener('DOMContentLoaded', () => {
    const addToCartButtons = document.querySelectorAll('.btn-addcart');
    const addToWishlistButtons = document.querySelectorAll('.btn-addwish');

    // Handle adding to cart
    addToCartButtons.forEach(button => {
        button.addEventListener('click', async () => {
            const productId = button.dataset.pdtId;
            console.log(`Adding to cart: ${productId}`);  // Debugging

            try {
                const response = await fetch(`/shoping-cart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to cart',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    const data = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!'
                });
            }
        });
    });

    // Handle adding to wishlist
    addToWishlistButtons.forEach(button => {
        button.addEventListener('click', async () => {
            const productId = button.dataset.pdtId;
            console.log(`Adding to wishlist: ${productId}`);  // Debugging

            try {
                const response = await fetch(`/wishlist/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to wishlist',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        location.reload();
                    });
                } else {
                    const data = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!'
                });
            }
        });
    });
});
</script>

	
	

	  
