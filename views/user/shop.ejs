					<div class="product-item">
						<div class="product-image">
							<img src="<%= product.images[0] %>" alt="IMG-PRODUCT">
						</div>
						<div class="product-details">
							<a href="/product?id=<%= product._id %>" class="product-name"><%= product.product_name.toUpperCase() %></a>
							<div class="product-price">
								
								<% if (product.discountPercentage) { %>
								
									<span class="original-price">&#x20a8; <%= product.originalPrice %> (Original Price)</span>
									<span class="discount-percentage">(<%= product.discountPercentage %>% off)</span><br>
									<span class="offer-price">Offer Price: &#x20a8; <%= product.price %></span>
								<% } else if (product.categoryOffer && typeof product.categoryOffer.discount_Amount === 'number') { %>
									<span class="category-offer-price">Category Offer: &#x20a8; <%= Math.round(product.price - (product.price * (product.categoryOffer.discount_Amount / 100))) %></span>
								<% } else { %>
									<span class="regular-price">&#x20a8; <%= product.price %></span>
								<% } %>
							</div>
							<% if (product.stock > 0) { %>
								<span class="stock-<%= product.stock < 10 ? 'low' : 'available' %>">
									<%= product.stock < 10 ? 'Only few left' : 'In Stock (' + product.stock + ' left)' %>
								</span>
							<% } else { %>
								<span class="stock-unavailable">Out of Stock</span>
							<% } %>
							<div class="product-rating">
								<% const fullStars = Math.floor(product.averageRating); %>
								<% const hasHalfStar = product.averageRating % 1 >= 0.5; %>
								<% for(let i = 1; i <= 5; i++) { %>
								  <% if(i <= fullStars) { %>
									<i class="fas fa-star filled"></i>
								  <% } else if(i === fullStars + 1 && hasHalfStar) { %>
									<i class="fas fa-star-half-alt filled"></i>
								  <% } else { %>
									<i class="far fa-star"></i>
								  <% } %>
								<% } %>
								<span class="rating-count">(<%= product.totalReviews %> Reviews)</span>
							  </div>
							<div class="product-actions">
								<button class="btn-addcart" data-pdt-id="<%= product._id %>" <%= product.stock <= 0 ? 'disabled' : '' %>>Add to cart</button>
								<button class="btn-addwish" data-pdt-id="<%= product._id %>">Add to wishlist</button>
							</div>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
