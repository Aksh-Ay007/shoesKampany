					<form action="/filter" method="GET">
						<div class="input-group">
							<input type="text" name="q" placeholder="Search..." class="search-input" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
							<input type="hidden" name="category" value="<%= typeof selectedCategory !== 'undefined' ? selectedCategory : '' %>">
							<button type="submit" class="search-button">Search</button>
						</div>
					</form>
					
				</div>
				<div class="filter-container">
					<form action="/filter" method="GET" class="filter-form">
						<select name="category" onchange="this.form.submit()" class="filter-select">
							<option value="All" <%= selectedCategory === 'All' ? 'selected' : '' %>>All Categories</option>
							<% categories.forEach(category => { %>
								<option value="<%= category._id %>" <%= category._id.toString() === selectedCategory.toString() ? 'selected' : '' %>><%= category.categoryName %></option>
							<% }) %>
						</select>
					</form>
				</div>
				<div class="sort-container">
					<form action="/filter" method="GET" class="sort-form">
						<select name="sort" onchange="this.form.submit()" class="sort-select">
							<option value='{"_id": 1}' <%= selectedSort === '{"_id": 1}' ? 'selected' : '' %>>Filter</option>
							<option value='{"product_name": 1}' <%= selectedSort === '{"product_name": 1}' ? 'selected' : '' %>>Name (A-Z)</option>
							<option value='{"product_name": -1}' <%= selectedSort === '{"product_name": -1}' ? 'selected' : '' %>>Name (Z-A)</option>
							<option value='{"price": 1}' <%= selectedSort === '{"price": 1}' ? 'selected' : '' %>>Price (Low to High)</option>
							<option value='{"price": -1}' <%= selectedSort === '{"price": -1}' ? 'selected' : '' %>>Price (High to Low)</option>
							<option value='{"_id": -1}' <%= selectedSort === '{"_id": -1}' ? 'selected' : '' %>>Latest</option>
						</select>
						<input type="hidden" name="category" value="<%= selectedCategory %>">
					</form>
				</div>
