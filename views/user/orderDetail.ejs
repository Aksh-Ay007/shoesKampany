  <script>
  document.addEventListener('DOMContentLoaded', function() {
	document.querySelectorAll('[id^="reviewForm"]').forEach(form => {
	  form.addEventListener('submit', function(e) {
		e.preventDefault();
  
		const formId = this.id;
		const index = formId.replace('reviewForm', '');
  
		const orderId = this.dataset.orderId;
		const productId = this.dataset.productId;
		const rating = document.getElementById(`rating${index}`).value;
		const review = document.getElementById(`review${index}`).value;
  
		fetch('/submitReview', {
		  method: 'POST',
		  headers: {
			'Content-Type': 'application/json',
		  },
		  body: JSON.stringify({ orderId, productId, rating, review }),
		})
		.then(response => response.json())
		.then(data => {
		  if (data.message === 'Review submitted successfully') {
			const reviewContainer = document.getElementById(`reviewContainer${index}`);
			reviewContainer.querySelector('form').style.display = 'none';
			reviewContainer.querySelector('#reviewMessage' + index).style.display = 'block';
			reviewContainer.querySelector('#reviewMessage' + index).innerHTML = `
			  <div class="alert alert-success">
				Thank you for your review! It has been submitted successfully.
				<button id="viewReview${index}" class="btn btn-primary mt-2">View Your Review</button>
			  </div>`;
  
			document.getElementById(`viewReview${index}`).addEventListener('click', function() {
			  window.location.href = `/product?id=${data.productId}#reviews`;
			});
  
			// Update isReviewed status on the client-side to prevent form from showing again
			reviewContainer.innerHTML = `
			  <div class="alert alert-info">
				You have already submitted a review for this product.
				<button id="viewReview${index}" class="btn btn-primary mt-2">View Your Review</button>
			  </div>`;
		  } else if (data.message === 'You have already reviewed this product') {
			const reviewContainer = document.getElementById(`reviewContainer${index}`);
			reviewContainer.querySelector('form').style.display = 'none';
			reviewContainer.querySelector('#reviewMessage' + index).style.display = 'block';
			reviewContainer.querySelector('#reviewMessage' + index).innerHTML = `
			  <div class="alert alert-info">
				You have already submitted a review for this product.
				<button id="viewReview${index}" class="btn btn-primary mt-2">View Your Review</button>
			  </div>`;
  
			document.getElementById(`viewReview${index}`).addEventListener('click', function() {
