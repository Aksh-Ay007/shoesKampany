<script>
 document.addEventListener('DOMContentLoaded', () => {
    const addToCartButtons = document.querySelectorAll('.add-to-cart');
    const removeFromWishlistButtons = document.querySelectorAll('.remove-from-wishlist');

    // Handle adding to cart
    addToCartButtons.forEach(button => {
        button.addEventListener('click', async () => {
            const productId = button.dataset.id;

            try {
                const response = await fetch(`/shoping-cart/${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    await removeFromWishlist(productId); // Remove from wishlist after adding to cart

                    Swal.fire({
                        icon: 'success',
                        title: 'Added to cart',
                        showConfirmButton: false,
                        timer: 1000
                    }).then(() => {
                        if (document.querySelectorAll('.wishlist-item').length === 0) {
                            location.reload(); // Reload if wishlist becomes empty
                        } else {
                            location.href = '/wishlist'; // Redirect to wishlist page
                        }
                    });
                } else {
                    const data = await response.json();
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!'
                });
            }
        });
    });

    // Handle removing from wishlist
    removeFromWishlistButtons.forEach(button => {
        button.addEventListener('click', async () => {
            const productId = button.dataset.id;
            await removeFromWishlist(productId);
        });
    });

    async function removeFromWishlist(productId) {
        try {
            const response = await fetch(`/wishlist/remove/${productId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Removed from wishlist',
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    document.querySelector(`button[data-id="${productId}"]`).closest('.wishlist-item').remove();
                    if (document.querySelectorAll('.wishlist-item').length === 0) {
                        location.reload(); // Reload if wishlist becomes empty
                    }
                });
            } else {
                const data = await response.json();
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: data.message
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong!'
            });
        }
    }
});
</script>














